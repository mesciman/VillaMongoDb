@model CreateDealDto
@{
    ViewData["Title"] = "Yeni Teklif Ekleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <label>Tür</label>
    <input type="text" asp-for="Type" class="form-control" />
    <br />

    <label>Image Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />

    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />

    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />


    <label>m2</label>
    <input type="text" asp-for="Square" class="form-control" />
    <br />


    <label>Kat</label>
    <input type="text" asp-for="Flour" class="form-control" />
    <br />


    <label>Oda</label>
    <input type="text" asp-for="RoomCount" class="form-control" />
    <br />

    <label>Park Alanı</label>
    <select type="text" asp-for="HasParkingArea" class="form-control">
        <option value="">Seçiniz</option>
        <option value="1">Var</option>
        <option value="0">Yok</option>
    </select>
    <br />

    <label>Ödeme</label>
    <input type="text" asp-for="PaymentType" class="form-control" />
    <br />

    <button class="btn btn-outline-dark">Kaydet</button>
</form>