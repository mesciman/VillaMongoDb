@model List<ResultDealDto>
@{
    ViewData["Title"] = "Teklif Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover table-bordered">
    @{
        int count = 0;
    }
    <tr>
        <th>#</th>
        <th>Tür</th>
        <th>Görsel</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>m2</th>
        <th>Kat</th>
        <th>Oda</th>
        <th>Park Alanı</th>
        <th>Ödeme</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Type</td>
            <td>@item.ImageUrl</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Square</td>
            <td>@item.Flour</td>
            <td>@item.RoomCount</td>
            <td>@item.HasParkingArea</td>
            <td>@item.PaymentType</td>
            <td>
                <button onclick="deleteDeal(@item.Id)" class="btn btn-outline-danger">Sil</button>
                <a asp-controller="Deal" asp-action="UpdateDeal" asp-route-id="@item.Id" class="btn btn-outline-info">Düzenle</a>
            </td>
        </tr>
    }
</table>

<a asp-controller="Deal" asp-action="CreateDeal" class="btn btn-outline-dark">Yeni Teklif Ekle</a>


<script>

    function deleteDeal(id) {
        Swal.fire({
            title: "Emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, sil!"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Deal/DeleteDeal/" + id;
                // Swal.fire({
                //     title: "Silindi!",
                //     text: "Dosyanız silindi.",
                //     icon: "success"
                // });
            }
        });
    }

</script>
