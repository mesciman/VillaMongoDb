@model UpdateCounterDto
@{
    ViewData["Title"] = "Sayaç Düzenleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="Id" />
    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />

    <label>Sayaç</label>
    <input type="text" asp-for="Count" class="form-control" />
    <br />

    <button class="btn btn-outline-dark">Kaydet</button>
</form>