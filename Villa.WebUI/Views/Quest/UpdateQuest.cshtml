@model UpdateQuestDto
@{
    ViewData["Title"] = "Soru/Cevap Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">

    <input type="hidden" asp-for="Id" />
    <label>Soru</label>
    <input type="text" asp-for="Question" class="form-control" />
    <br />

    <label>Cevap</label>
    <input type="text" asp-for="Answer" class="form-control" />
    <br />

    <button class="btn btn-outline-dark">Kaydet</button>
</form>
